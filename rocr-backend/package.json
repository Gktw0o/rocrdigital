    "hono-rate-limiter": "^0.5.3",
    "jose": "^6.1.3",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "bun-types": "^1.3.8",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
